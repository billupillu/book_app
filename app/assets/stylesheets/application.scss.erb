			}
.bookTitle{
		font-family: 'Righteous',ubuntu;
		letter-spacing: 6px;
		word-spacing: 10px;
		color: #3C5460;
		text-shadow:2px 2px 2px #fff,-2px -2px 2px #fff;
		text-align: center;
}	

.box{
	box-shadow: 1px 1px 10px #dfdddf;
	float:left;
	margin: 5px;
	padding: 5px;
	overflow: hidden;
	width: 220px;
	height: 300px;
	line-height: 1.4em;
	transition:all 0.4s linear;
}		
.box img{
	display: block;
	width: 100%;
	transition:all 0.4s linear;
	

}

#search_field{
	width:380px;
	height: 44px;
	box-shadow: none;
	border:none;
}
.btn-default{
	background-color: #ecc731 ;
	font-size: 12px !important;
	text-shadow: 1px 1px 2px #191919;
	height: 43px;
	margin-top: -2px;
	width:90px;
	margin-left: -93px;	
}
.cart{background-color: transparent !important;
		box-shadow: none;border-radius: none;border: none;
		padding: 0;transition:all 0.3s linear;
		h4{transition:all 0.3s linear;}}

.cart:hover{color:rgb(58,193,98) !important;}		
.cart h4:hover{color:rgb(58,193,98) !important;}	

