<div class="col-md-6 col-md-offset-3" style="text-align:center">
<%=bootstrap_form_tag url: signin_path, :html=> {class: 'form-horizontal'} do |f| %>
	
	<div class="form-group">
		<%=f.email_field :email, hide_label: true, placeholder: "enter email (ex: bill@example.com)", id: "sessionEmail", class: "form-control"%>
	</div>

	<div class="form-group">
		<%=f.password_field :password, placeholder: "enter Password",class: "form-control", id: "sessionPassword", hide_label: true%>
	</div>

	<div class="form-group actions control-group">
		<%=f.submit "Sign In",class: "btn btn-default"%>
	</div>
<%end%>
<br/><br/>
</div>

<style> .btn-default{ background-color: rgb(58,193,98) !important;} </style>
