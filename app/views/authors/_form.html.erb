<div class="col-md-6 col-md-offset-3" style="text-align:center">
<%=bootstrap_form_for(@author, :html=> {class: 'form-horizontal'}) do |f| %>
<div class="form-group">
  <%= f.text_field :first_name, class: "form-control",hide_label: true,placeholder: "enter First Name (ex: Bill)" %>
</div>
<div class="form-group">
  <%= f.text_field :second_name, class: "form-control",hide_label: true,placeholder: "enter Last Name (ex: Gates)"%>
</div>

<br />

<div class="form-group actions control-group">
  <%if @t == 1%>
    <%=f.submit class: "btn btn-primary"%>
  <%else%>
    <%=f.submit class: "btn btn-success"%>
  <%end%>
</div>
<%end%>
</div>
