<section>
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<header>
				<h3 class="titles">
					Your Shopping Cart <%=image_tag 'cart.png'%>
				</h3>
			</header>

			<%@cart.cart_items.each do |item|%>
				<%=item.quantity%>&times;<%=item.book.title%><%="#{number_to_currency(item.line_total)}"%>
			<%end%>

			<hr />

			<strong>Total:</strong> <%=number_to_currency(@cart.total_sale)%>
			<%=button_to "Clear Cart", cart_path(@cart), method: :delete, data: {confirm: "Are you sure to clear the cart"}, class: "btn btn-danger"%>
		</div>
	</div>
</section>