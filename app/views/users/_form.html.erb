<div class="col-md-6 col-md-offset-3" style="text-align:center">
<%=bootstrap_form_for(@user, :html=> {class: 'form-horizontal'}) do |f| %>
	
	<div class="form-group">
		<%=f.text_field :username, hide_label: true, placeholder: "enter Username (ex: Bill123)", id: "userUsername", class: "form-control"%>
	</div>

	<div class="form-group">
		<%=f.email_field :email, hide_label: true, placeholder: "enter email (ex: bill@example.com)", id: "userEmail", class: "form-control"%>
	</div>

	<div class="form-group">
		<%=f.password_field :password, placeholder: "enter Password",class: "form-control", id: "userPassword"%>
	</div>

	<div class="form-group">
		<%=f.password_field :password_confirmation, placeholder: "Re-enter Password",class: "form-control", id: "userPasswordConfirmation"%>
	</div>
	<hr>
	<!-- ============== Nested Attributed for address ============== -->

		<%=f.fields_for :addresses do |address|%>

			<div class="form-group">
		<%=address.text_field :addres_line1, hide_label: true, placeholder: "enter Street Address (ex: 623 Eloisa Flat)", id: "addressAddress", class: "form-control"%>
			</div>

			<div class="form-group">
		<%=address.text_field :address_line2, hide_label: true, placeholder: " Second Line of Address (optional)", id: "addressAddress2", class: "form-control"%>
			</div>

			<div class="form-group">
		<%=address.text_field :city, hide_label: true, placeholder: "enter City (ex: South Dexterstad)", id: "addressCity", class: "form-control"%>
			</div>

			<div class="form-group">
		<%=address.text_field :state, hide_label: true, placeholder: "enter State (ex: Idaho)", id: "addressState", class: "form-control"%>
			</div>

			<div class="form-group">
		<%=address.text_field :zipcode, hide_label: true, placeholder: "enter Zipcode (ex: 25461 )", id: "addressZipcode", class: "form-control"%>
			</div>
		<%end%>

	<!-- ************************************************************ -->
		<hr>
	<div class="form-group actions control-group">
		<%=f.submit class: "btn btn-warning"%>
	</div>
<%end%>
<br/><br/>
</div>