<div class="col-md-6 col-md-offset-3" style="text-align:center">
<%=bootstrap_form_for(@user, :html=> {class: 'form-horizontal'}) do |f| %>
	
	<div class="form-group">
		<%=f.text_field :username, hide_label: true, placeholder: "enter Username (ex: Bill123)", id: "userUsername", class: "form-control"%>
	</div>

	<div class="form-group">
		<%=f.email_field :email, hide_label: true, placeholder: "enter email (ex: bill@example.com)", id: "userEmail", class: "form-control"%>
	</div>

	<div class="form-group">
		<%=f.password_field :password, placeholder: "enter Password",class: "form-control", id: "userPassword"%>
	</div>

	<div class="form-group">
		<%=f.password_field :password_confirmation, placeholder: "Re-enter Password",class: "form-control", id: "userPasswordConfirmation"%>
	</div>

	<div class="form-group actions control-group">
		<%=f.submit class: "btn btn-warning"%>
	</div>
<%end%>
<br/><br/>
</div>